@model Akademi_Transportation.Models.TblAdmin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutNew.cshtml";
}

<h2>Profil Bilgileri Güncelleme</h2>

<form method="post">
    <label>Kullanıcı Adı:</label>
    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    <br />
    <label>Kullanıcı Şifre:</label>
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    <br />
    <label>Kullanıcı Rol:</label>
    @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Güncelle</button>
</form>