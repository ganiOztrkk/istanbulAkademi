@model MailRequestViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Mail Gönderme İşlemi</h1>

<form method="post">
    <label>Alıcı Mail Adresi</label>
    <input type="text" class="form-control" asp-for="ReceiverMail"/>
    <br/>
    <label>Mail Konusu</label>
    <input type="text" class="form-control" asp-for="Subject"/>
    <br/>
    <label>Mesaj İçeriği</label>
    <input type="text" class="form-control" asp-for="Body" />
    <br />
    
    <button class="btn btn-primary">Mail Gönder</button>
</form>

