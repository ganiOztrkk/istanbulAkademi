@model List<MediatorAkademiPlusPostgre.MediatorDesignPattern.Results.GetAllProductQueryResult>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container">
    <br/>
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Ürün Marka</th>
            <th>Ürün Stok</th>
            <th>Ürün Fiyat</th>
            <th>Ürün Sil</th>
            <th>Ürün Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {   
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductBrand</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductPrice</td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
                <td><a href="#" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Product/AddProduct/" class="btn btn-primary">Yeni Ürün Ekle</a>
</div>