@model List<Akademi_Transportation.Models.TblProduct>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutNew.cshtml";
}

<h2>Gönderi(Product) Listesi</h2>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Ürün Tipi</th>
        <th>Ürün Boyutu</th>
    </tr>
    @foreach (var item in Model)
        {
            <tr>
                <th>@item.ProductID</th>
                <th>@item.ProductName</th>
                <th>@item.ProductSizeType</th>
                <th>@item.ProductSize</th>
                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
</table>
<a href="/Product/AddProduct" class="btn btn-primary">Yeni Gönderi Girişi</a>